int main()
{
    float altura, altDec, altCen, altMili;
    
    printf("informe o valor da altura em metros");
    scanf("%f",&altura);
    altDec = altura * 10;
    altCen = altura * 100;
    altMili = altura * 1000;
    printf("A altura em Decímetros é %f, em Centímetros é %f, em Milímetros é %f",altDec,altCen, altMili);
    
    return 0;
}
